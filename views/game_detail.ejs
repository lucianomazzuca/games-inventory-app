<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/tailwind.css' />
    
  </head>
  <body class="bg-gray-100 min-h-screen">

    <%- include('partials/nav'); %>   

    <div class="wrapper bg-white shadow min-h-screen">
      <h1 class="title mb-2"><%- title %></h1>

      <div class="grid grid-cols-3 gap-4">
        <div class="max-h-96 max-w-full rounded overflow-hidden col-span-3 md:col-span-1">
          <% if (game.image) { %>
            <img src="/images/games/<%= game.image %>" alt="cover" srcset="" class="overflow-hidden object-cover max-w-sm mx-auto md:w-full">
          <% } else {%>
            <img src="/images/games/default.jpg" alt="cover" srcset="" class="overflow-hidden w-full object-cover">
          <% } %>     
        </div>  
  
        <div class="col-span-3 md:col-span-2">
          <h4 class="subtitle">Description</h4>
          <p class="mt-2">
            <%= game.description %> 
          </p>
        </div>
      

        <div>
          <h4 class="subtitle">Price</h4> 
          <p class="mt-1">
            <%= game.price %> 
          </p>
        </div>

        <div>
          <h4 class="subtitle">Stock</h4>
          <p>
            <%= game.stock %>
          </p>
        </div>

        <div>
          <h4 class="subtitle">Release</h4>
          <p>
            <%= game.release_formatted %>
          </p>
        </div>

        <div>
        	<h4 class="subtitle">Developer</h4>
        	<p>
        	  <%= game.developer.name %>
        	</p>
        </div>

        <div>
          <h4 class="subtitle">Genre </h4>
            <ul class="flex space-x-5">
                <% game.genre.forEach(genre => { %>
                    <li><%= genre.name %> </li>
                <% }) %>
            </ul>
        </div>
    </div>
    
      <div class="flex space-x-10 mt-10 justify-center">
        <a href="/games/update/<%= game._id %>" class="btn bg-indigo-500">Update</a>
  
        <form action="/games/delete/<%= game._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn bg-red-600">Delete</button>
        </form>
      </div>

    </div>


  </body>
</html>
