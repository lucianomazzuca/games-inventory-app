<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/tailwind.css' />
  </head>
  <body class="bg-gray-100">

    <%- include('partials/nav'); %>   

    <main class="wrapper">

      <h1 class="my-4 text-xl"><%= title %></h1>

      <div class="grid grid-cols-fit-items gap-3">
          <!-- Game Cards go here -->

          <% games.forEach(game => { %>
            <div class="flex flex-col bg-white rounded shadow-md overflow-hidden max-w-4xl cursor hover:shadow-lg">
              <% if (game.image) { %>
                <img src="/images/games/<%= game.image %>" alt="" srcset="" class="w-full h-48">
              <% } else {%>
                <img src="/images/games/default.jpg" alt="" srcset="" class="w-full h-48">
              <% } %> 
              <div class="px-4 py-2 flex flex-col justify-evenly h-40">
                  <span class="font-semibold text-lg h-10 flex-auto"><%= game.title %></span>
                  <span class="text-lg flex-auto">$60</span>
                  <div class=" justify-self-end flex-auto">
                      <a href="<%= game.url %>" class="bg-indigo-500 text-white rounded px-4 py-2 hover:bg-indigo-400">Details</a>
                  </div>
              </div>
          </div>
        <% }) %>

          <div class="bg-white rounded shadow-md max-w-4xl cursor hover:shadow-lg">
              <img src="images/cyberpunk.jpg" alt="" srcset="" class="w-full h-48">
              <div class="px-4 py-2 flex flex-col flex-grow">
                  <span class="font-semibold text-lg">Cyberpunk 2077</span>
                  <span class=" text-lg ">$60</span>
                  <div class="my-4">
                      <a href="" class="btn bg-indigo-500 hover:bg-indigo-400">
                        Details
                      </a>
                  </div>
              </div>
          </div>


      </div>
      
  </main>


  <a href="/games/add">Add New</a>

  <script src="javascripts/dropdown.js"></script>



  </body>
</html>
